{
  "name": "epic-mail",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "start:dev": "npm run create-table-users-dev && npm run create-table-messages-dev && npm run create-table-inbox-dev && npm run create-table-sent-dev && npm run create-table-draft-dev && npm run create-table-groups-dev && cross-env NODE_ENV=development nodemon server/index.js --exec babel-node --timeout 600000 --exit",
    "build": "babel server -d dist && babel server --presets env server -d dist",
    "test": "npm run create-table-users-test && npm run create-table-messages-test && npm run create-table-inbox-test && npm run create-table-draft-test && npm run create-table-groups-test && cross-env NODE_ENV=test nyc mocha --require babel-register server/test/**/*.js --timeout 100000 --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "create-table-users-dev": "cross-env NODE_ENV=development babel-node ./server/models/users.js",
    "create-table-messages-dev": "cross-env NODE_ENV=development babel-node ./server/models/messages.js",
    "create-table-inbox-dev": "cross-env NODE_ENV=development babel-node ./server/models/inbox.js",
    "create-table-sent-dev": "cross-env NODE_ENV=development babel-node ./server/models/sent.js",
    "create-table-draft-dev": "cross-env NODE_ENV=development babel-node ./server/models/draft.js",
    "create-table-groups-dev": "cross-env NODE_ENV=development babel-node ./server/models/groups.js",
    "create-table-users-test": "cross-env NODE_ENV=test babel-node ./server/models/users.js",
    "create-table-messages-test": "cross-env NODE_ENV=test babel-node ./server/models/messages.js",
    "create-table-inbox-test": "cross-env NODE_ENV=test babel-node ./server/models/inbox.js",
    "create-table-sent-test": "cross-env NODE_ENV=test babel-node ./server/models/sent.js",
    "create-table-draft-test": "cross-env NODE_ENV=development babel-node ./server/models/draft.js",
    "create-table-groups-test": "cross-env NODE_ENV=test babel-node ./server/models/groups.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ochowo/Epic-Mail.git"
